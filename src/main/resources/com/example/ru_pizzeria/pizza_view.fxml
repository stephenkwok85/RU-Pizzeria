<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ru_pizzeria.PizzaViewController">
    <Label text="Pizza Style:" />
    <ComboBox fx:id="styleComboBox" prefWidth="200" />

    <Label text="Pizza Type:" />
    <ComboBox fx:id="typeComboBox" prefWidth="200" />

    <Label text="Pizza Size:" />
    <ComboBox fx:id="sizeComboBox" prefWidth="200" />

    <Label text="Pizza Topping (7 max):" />
    <VBox fx:id="toppingCheckBoxes">

    </VBox>

    <Label text="Current Price:" />
    <Label fx:id="priceLabel" text="$0.00" />

    <Button text="Add Pizza" fx:id="addPizzaButton" />
    <Button text="Cancel" fx:id="cancelButton" />
</VBox>
